<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.mealplanner.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_grocery"
        android:name="com.example.mealplanner.ui.grocery.GroceryFragment"
        android:label="@string/title_grocery"
        tools:layout="@layout/fragment_grocery" />

    <dialog
        android:id="@+id/bottomSheetFragment"
        android:name="com.example.mealplanner.ui.BottomSheet.BottomSheetFragment"
        android:label="fragment_bottom_sheet_list_dialog"
        tools:layout="@layout/fragment_bottom_sheet_list_dialog" >
    </dialog>
    <dialog
        android:id="@+id/confirmSheetFragment"
        android:name="com.example.mealplanner.ui.ConfirmSheet.ConfirmSheetFragment"
        android:label="fragment_confirm_sheet_list_dialog"
        tools:layout="@layout/fragment_confirm_sheet_list_dialog" >

    </dialog>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.mealplanner.ui.Detail.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail" />
    <fragment
        android:id="@+id/navigation_saved"
        android:name="com.example.mealplanner.ui.Saved.SavedRecipesFragment"
        android:label="fragment_saved_recipes"
        tools:layout="@layout/fragment_saved_recipes" />
    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.example.mealplanner.ui.Settings.SettingsFragment"
        android:label="SettingsFragment" />
</navigation>